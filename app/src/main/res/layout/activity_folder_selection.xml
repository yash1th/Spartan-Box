<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FolderActivity"
    >

    <ListView
        android:id="@+id/select_folder_list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:dividerHeight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="70dp"
        android:choiceMode="singleChoice"
        />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder_select_cancel"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginStart="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:width="100dp"
        android:layout_marginBottom="10dp"
        android:onClick="didTouchCancelButton" />

    <Button
        android:id="@+id/select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder_select_select"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/cancel_button"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="30sp"
        android:layout_toRightOf="@+id/cancel_button"
        android:width="100dp"
        android:onClick="didTouchSelectButton" />

</RelativeLayout>